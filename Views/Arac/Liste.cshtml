@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Araç Listele";
}
@model IEnumerable<AspProject1.Models.Araclar>

    @if (Model != null && Model.Any())
{
  
     <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Kayıt Numarası <i class="fa-solid fa-id-card"></i></th>
                <th>Araç Plakası <i class="fa-solid fa-hashtag"></i></th>
                <th>Marka <i class="fa-solid fa-tag"></i></th>
                <th>Model <i class="fa-solid fa-car-side"></i></th>
                <th>Araç Yılı <i class="fa-solid fa-calendar"></i></th>
                <th>Müşteri Adı <i class="fa-solid fa-person"></i></th>
                <th>Müşteri Telefonu <i class="fa-solid fa-phone"></i></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var arac in Model)
            {
                <tr>
                    <td>@arac.Id</td>
                    <td>@arac.Plaka</td>
                    <td>@arac.Marka</td>
                    <td>@arac.Model</td>
                    <td>@arac.Yil</td>
                    <td>@arac.MusteriAdi</td>
                    <td>@arac.Telefon</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-controller="Arac" asp-action="Silme" method="post" class="mt-3">
        <label for="Id">Silinecek Araç ID:</label>
        <input type="number" name="Id" id="Id" class="form-control w-25 d-inline-block" required />
        <button type="submit" class="btn btn-danger">Sil</button>
    </form>
    
}
else
{
    <p>Henüz eklenmiş araç bulunmamaktadır.</p>
}

